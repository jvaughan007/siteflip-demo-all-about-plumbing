---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
interface Props { title?: string; description?: string; }
const { title = 'All About Plumbing', description = 'With over nineteen years of experience and plumbing company of “Extreme Home Makeover Home Edition” as seen on TV there is no job too big or small for All About Plumbing.' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>
</head>
<body>
  <Header />
  <main><slot /></main>
  <Footer />
</body>
</html>
